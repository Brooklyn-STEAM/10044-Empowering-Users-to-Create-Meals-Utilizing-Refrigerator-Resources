<body class="bg-body-tertiary">
    {% include "components/navbar.html.jinja" %}
 <div id="flash-messages" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1050;"></div>
   <div style="text-align:center">
  
  <span class="dot"></span>
  <div id="flash-messages" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1050;"></div>
</div>
<div class="card text-center">
    <div class="card-title">
        <h1>{{recipe['name']}}</h1>
        <img src="{{recipe['image']}}" class="card-img-top ingred-pics" alt="{{recipe['name']}}" style="height: 200px; width: 200px;">
    </div>

{%for message in get_flashed_messages() %}

<div class="alert alert-primary" role="alert">
 {{message}}
</div>

{%endfor%}



    <div class="card-body">
        <p class="card-text">
        {{recipe['description']}}
        </p>
      
        <form action="/individual/recipe/{{recipe['id']}}/save" method="post">
        <button type="submit" id="love" class="btn btn-primary"> <i class="fa fa-heart"></i>Add to Saved</button>
        </form>

        <form action="/recipe/{{recipe['id']}}/delete" method="post">
        <button type="submit" id="nope" class="btn btn-danger"> <i class="fa fa-trash"></i>Remove from Saved</button>
        </form>
        <hr>
      

        <hr>
        <h3>Ingredients</h3>
        TBA
        <hr>
        <h3>Instructions</h3>
        <div class="card-text text-wrap" style="font-size:40px;">{{recipe['directions'] | replace('\\', '')| replace('\n', '<br>') | safe}}
        </div>
        
    </div>

</div>
<br> <br> <br> <br> 
 <div>
                    <h5 class="mb-3">Add Your Review</h5>
                    <form action= "/addreview/{{recipe['id']}}" method="POST">
                        <div class="mb-3"> 
                            <label for="rating" class="form-label">Rating</label>
                            <select name="rating" id="rating" class="form-select" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>        
                        </div> 
                        <div class="mb-3">
                            <label for="comment" class="form-label">Leave a review </label> 
                            <textarea name="review" id="review" class="form-control" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-secondary">Submit Review</button>
                    </form>
                </div> 

