    <!-- Custom Styles -->
    <style>
        /* Circular Buttons */
        .btn-circle {
            width: 60px;
            height: 60px;
            padding: 10px;
            border-radius: 50%;
            text-align: center;
            font-size: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Scrollable Button Menu */
        .scrollmenu {
            display: flex;
            overflow-x: auto;
            gap: 10px;
            padding: 10px;
            white-space: nowrap;
        }

        /* Ensures full-page height for sticky footer */
        html, body {
            height: 100%;
        }

        /* Footer Styling */
        footer {
            position: static;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px 0;
            background-color: #f8f9fa;
        }
    </style>

