  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="static/images/carousel_logo.png" class="d-block w-100" alt="..." style="height:400px; width:100%;">
    </div>
    <div class="carousel-item">
      <img src="static/images/mexican_cuisine.png" class="d-block w-100" alt="..." style="height:400px; width:100%;">
