<body class="bg-body-tertiary ">
    <div class="">
        {% include "components/navbar.html.jinja" %}
    </div>


  <div class="card mb-3">
  <img src="/static/images/carousel_logo.png" class="card-img-top" alt="...">
  
</div>




    <div class="scrollmenu">
        {%if ingredients|length == 0%}
        <p class="text-center">You have no saved ingredients</p>
        {%else%}
        {% for ingredient in ingredients %}
        <button type="button" class="btn-circle ingred-pics">
            <img src="{{ingredient['image']}}" class="ingred-pics" alt="{{ingredient['name']}}">
            <div class="card-body">
        </button>

        {% endfor %}

        {%endif%}






    </div>



    <hr>
    <div class="d-flex justify-content-center my-4">
        <a href="/add_ingredient" class="btn btn-primary">Find Recipes For You</a>
    </div>
    <div class="container my-4"> 
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 justify-content-center">


            <div class="col">
                <div class="card">
                    <img src="static/images/saved_recipes.png" class="card-img-top" alt="Saved Recipes">
                    <div class="card-body">
                        <a href=savedrecipes class="card-text">Saved Recipes</a>
                    </div>
                </div>
            </div>


            <div class="col">
                <div class="card">
                    <img src="static/images/mexican_cuisine.png" class="card-img-top" alt="Mexican Cuisine">
                    <div class="card-body">

                        <a href="/mexican" class="card-text">Mexican</a>
                    </div>
                </div>
            </div>


            <div class="col">
                <div class="card">
                    <img src="static/images/korean_cuisine.png" class="card-img-top" alt="Korean Cuisine">
                    <div class="card-body">
                        <a href="/british " class="card-text"> British</a>
                    </div>
                </div>
            </div>


            <div class="col">
                <div class="card">
                    <img src="static/images/italian_cuisine.png" class="card-img-top" alt="Italian Cuisine">
                    <div class="card-body">
                        <a href="/italian" class="card-text"> Italian</a>
                    </div>
                </div>
            </div>


            <div class="col">
                <div class="card">
                    <img src="static/images/japenese_cuisine.png" class="card-img-top" alt="Japanese Cuisine">
                    <div class="card-body">
                        <a href="/japanese" class="card-text">Japanese</a>
                    </div>
                </div>
            </div>


            <div class="col">
                <div class="card">
                    <img src="static/images/indian_cuisine.png" class="card-img-top" alt="Indian Cuisine">
                    <div class="card-body">
                        <a href="/indian" class="card-text">Indian</a>
                    </div>
                </div>
            </div>

        </div>
    </div>


    
