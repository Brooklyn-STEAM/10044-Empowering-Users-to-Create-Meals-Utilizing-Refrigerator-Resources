<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Your Ingredients</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .header h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 16px;
            color: #555;
        }

        /* Tabs */
        .tabs {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .tab {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            border-radius: 8px;
            cursor: pointer;
            background-color: #f0f0f0;
            transition: background-color 0.3s ease;
        }

        .tab.active {
            font-weight: bold;
            border: 2px solid #000;
            background-color: #4b3b59;
            color: white;
        }

        /* Tags (Pills) */
        .tags {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: center;
            margin-top: 30px;
        }

        .pill {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            border-radius: 50px;
            background-color: #e5e7eb;
            color: #333;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
            border: 1px solid transparent;
            text-align: center;
        }

        .pill:hover {
            background-color: #d1d5db;
            color: #000;
        }

        .pill input[type="checkbox"] {
            display: none;
        }

        .pill input[type="checkbox"]:checked + .pill {
            background-color: #4b3b59;
            color: #fff;
            border-color: #4b3b59;
        }

        .fruit-pill {
            border: 1px solid #ff6347;
            background-color: #ffe4e1;
        }

        .herbs-pill {
            border: 1px solid #32cd32;
            background-color: #f0fff0;
        }

        .grain-pill {
            border: 1px solid #daa520;
            background-color: #fffaf0;
        }

        .hidden {
            display: none;
        }

        /* Footer */
        .footer {
            margin-top: 40px;
            display: flex;
            justify-content: space-between;
        }

        .footer .btn {
            border-radius: 8px;
            padding: 10px 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h2>Select Your Ingredients</h2>
            <p>Choose Ingredients In Your Kitchen Right Now!</p>
        </div>

        <!-- Form for Submitting Ingredients -->
        <form class="container" method="post" action="/add_ingredient">
            <!-- Tabs for Categories -->
            <div class="tabs">
                {% for category in ['Fruit', 'Herbs', 'Grain', 'Alternative', 'Baking', 'Dairy', 'Liquor'] %}
                <div class="tab {% if loop.first %}active{% endif %}" onclick="switchTab('{{ category }}')"
                    id="tab-{{ category }}">
                    {{ category }}
                </div>
                {% endfor %}
            </div>

            <!-- Tags for Ingredients -->
            <div class="tags">
                {% for category in ['Fruit', 'Herbs', 'Grain', 'Alternative', 'Baking', 'Dairy', 'Liquor'] %}
                <div class="tag-list {% if not loop.first %}hidden{% endif %}" id="tags-{{ category }}">
                    <h3>{{ category }}</h3>
                    {% for ingredient in ingredients %}
                    {% if ingredient['category'] == category %}
                    <label class="pill {{ category | lower }}-pill">
                        <input type="checkbox" name="ingredients" value="{{ ingredient['name'] }}">
                        {{ ingredient['name'] }}
                    </label>
                    {% endif %}
                    {% endfor %}
                </div>
                {% endfor %}
            </div>

            <!-- Submit Button -->
            <div class="footer">
                <a href="/" class="btn btn-outline-secondary">Back</a>
                <button type="submit" class="btn btn-primary">Add Ingredients</button>
            </div>
        </form>
    </div>

    <script>
        function switchTab(category) {
            // Remove active class from all tabs
            document.querySelectorAll('.tab').forEach(tab => tab.classList.remove('active'));

            // Add active class to the clicked tab
            document.getElementById(`tab-${category}`).classList.add('active');

            // Hide all tag lists
            document.querySelectorAll('.tag-list').forEach(tagList => tagList.classList.add('hidden'));

            // Show the tag list for the selected category
            document.getElementById(`tags-${category}`).classList.remove('hidden');
        }
    </script>
</body>

</html>